.PHONY: allclean RLcom RLcommon 

#--------------------------
ENV = mines.cpp
COMMON = mines_common.h
#--------------------------

HANDLEV = env_pipe_handler.cpp
	
all: RLcom RLcommon Build/eenv.o Build/handle.o
	${CXX} Build/eenv.o Build/handle.o -o Build/RLenv

RLcom:
	-rm -rf Build/RLcommon.h

RLcommon: $(COMMON)
	cp $(COMMON) Build/RLcommon.h

Build/eenv.o: $(ENV)
	${CXX} -I Build/ -g -o Build/eenv.o -c $(ENV)

Build/handle.o: ../../RL-Glue1p1/Pipes/$(HANDLEV)
	${CXX} -I Build/ -g -o Build/handle.o -c ../../RL-Glue1p1/Pipes/$(HANDLEV)

clean:
	-rm -rf Build/*.o core* *.pyc Build/RLcommon.h Build/RLenv

