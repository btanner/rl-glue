CC = gcc
RL-Glue = ../../RL-Glue
RL-Sockets = $(RL-Glue)/Sockets/

# We need to search the RL-Glue directory for Sockets/RLagent_net
CFLAGS = -I$(RL-Glue)/ -I$(RL-Sockets) -ansi -pedantic -Wall

all: Environment RL_environment
	$(CC) -o RL_environment Build/mines.o Build/RLnet.o Build/RLnet_environment.o

Environment: mines.o

RL_environment: RLnet.o RLnet_environment.o

mines.o: ./Environment/mines.c ./Environment/mines.h
	$(CC) -c $(CFLAGS) $< -o Build/mines.o

RLnet.o: $(RL-Glue)/Sockets/RLnet/RLnet.c
	$(CC) -c $(CFLAGS) $< -o Build/RLnet.o

RLnet_environment.o: $(RL-Glue)/Sockets/Environment/RLnet_environment.c
	$(CC) -c $(CFLAGS) $< -o Build/RLnet_environment.o

clean:
	rm -fr Build/*.o
	rm -fr RL_environment

tidy:
	rm -fr *.*~
	rm -fr *~
	rm -fr \#*
