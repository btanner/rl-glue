CC = gcc
RL-Glue = ../../RL-Glue
RL-Sockets = $(RL-Glue)/Sockets/

# We need to search the RL-Glue directory for Sockets/RLagent_net
CFLAGS = -I$(RL-Glue)/ -I$(RL-Sockets) -ansi -pedantic -Wall

all: Agent RL_agent 
	$(CC) -o RL_agent Build/ZeroAgent.o Build/RLnet.o Build/RLnet_agent.o

Agent: ZeroAgent.o

RL_agent: RLnet.o RLnet_agent.o

ZeroAgent.o: ./Agent/ZeroAgent.c ./Agent/ZeroAgent.h
	$(CC) -c $(CFLAGS) $< -o Build/ZeroAgent.o

RLnet.o: $(RL-Glue)/Sockets/RLnet/RLnet.c
	$(CC) -c $(CFLAGS) $< -o Build/RLnet.o

RLnet_agent.o: $(RL-Glue)/Sockets/Agent/RLnet_agent.c
	$(CC) -c $(CFLAGS) $< -o Build/RLnet_agent.o

clean:
	rm -fr Build/*.o
	rm -fr RL_agent

tidy:
	rm -fr *.*~
	rm -fr *~
	rm -fr \#*
